@model Dota.Models.Hero

@{
    ViewBag.Title = "HeroDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>HeroDetails</h2>

<img src="@Model.MainImage" />
<p>Name: @Model.Name</p>
<p>Lane: @Model.Lane</p>
<p>Description: @Model.Description</p>
<hr />

@for (int i = 0; i < Model.Spells.Length; i++)
{
    <img src="@Model.Spells[i]" />
}

